<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="qst.com.myapplication.MainActivity">

    <Button
        android:text="启动Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_start"
        app:layout_constraintRight_toLeftOf="@+id/button_stop"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="28dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_stop"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:text="停止Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_stop"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="45dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="67dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="绑定Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_bind"
        app:layout_constraintRight_toLeftOf="@+id/button_unbind"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/button_start" />

    <Button
        android:text="解绑Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_unbind"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="41dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_bind"
        tools:layout_constraintBaseline_creator="1" />
</android.support.constraint.ConstraintLayout>
